#flash_messages
  - flash.each do |type, message|
    - if type == "notice"
      .flash-message.bg-green-100.border.border-green-400.text-green-700.px-4.py-3.rounded-lg.fixed.z-50.bottom-8{class:"w-[95%] left-1/2 translate-x-[-50%]", "data-controller" => "flash-message", "data-flash-message-timeout-value" => "4000", :role => "alert"}
        %strong.font-bold Success!
        %span.block.sm:inline= message
        %span.absolute.top-0.bottom-0.right-0.px-4.py-3.cursor-pointer{"data-action" => "click->flash-message#cleanup"}
          %svg.close-button.fill-current.h-6.w-6.text-green-500.cursor-pointer{:role => "button", :viewbox => "0 0 20 20", :xmlns => "http://www.w3.org/2000/svg"}
            %title Close
            %path{:d => "M14.348 14.849a1 1 0 001.415-1.415L11.414 10l4.349-4.349a1 1 0 10-1.415-1.415L10 8.586 5.651 4.237a1 1 0 00-1.415 1.415L8.586 10l-4.349 4.349a1 1 0 101.415 1.415L10 11.414l4.348 4.348z"}
    - elsif type == "alert"
      .flash-message.bg-red-100.border.border-red-400.text-red-700.px-4.py-3.rounded-lg.fixed.z-50.bottom-8{class:"w-[95%] left-1/2 translate-x-[-50%]", "data-controller" => "flash-message", "data-flash-message-timeout-value" => "4000", :role => "alert"}
        %strong.font-bold Error!
        %span.block.sm:inline= message
        %span.absolute.top-0.bottom-0.right-0.px-4.py-3.cursor-pointer{"data-action" => "click->flash-message#cleanup"}
          %svg.close-button.fill-current.h-6.w-6.text-red-500.cursor-pointer{:role => "button", :viewbox => "0 0 20 20", :xmlns => "http://www.w3.org/2000/svg"}
            %title Close
            %path{:d => "M14.348 14.849a1 1 0 001.415-1.415L11.414 10l4.349-4.349a1 1 0 10-1.415-1.415L10 8.586 5.651 4.237a1 1 0 00-1.415 1.415L8.586 10l-4.349 4.349a1 1 0 101.415 1.415L10 11.414l4.348 4.348z"}
